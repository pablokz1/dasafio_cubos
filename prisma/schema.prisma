datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum TypeTransactionEnum {
  TED
  PIX
  DOC
  TRANSFERENCIA_INTERNA
}

enum CardType {
  PHYSICAL
  VIRTUAL
}

model People {
  id        String    @id @default(uuid())
  name      String
  document  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  accounts  Account[]
}

model Account {
  id          String        @id @default(uuid())
  branch      String
  account     String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isActive    Boolean

  idPeople    String
  people      People        @relation(fields: [idPeople], references: [id])

  transactions Transaction[] 

  cards       Card[]

  balance     Decimal        @default(0) @db.Decimal(18, 2)
}

model Card {
  id         String    @id @default(uuid())
  type       CardType
  number     String    
  cvv        String    @db.Char(3) 
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  idAccount  String
  account    Account   @relation(fields: [idAccount], references: [id])

  @@index([idAccount, type], name: "idx_unique_physical_per_account")
}

model Transaction {
  id              String      @id @default(uuid())
  value           Decimal
  description     String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  idAccount       String
  account         Account     @relation(fields: [idAccount], references: [id])

  revertedFromId  String?     
  revertedFrom    Transaction? @relation("Reversal", fields: [revertedFromId], references: [id])
  reversals       Transaction[] @relation("Reversal")

  @@map("transactions")
}

